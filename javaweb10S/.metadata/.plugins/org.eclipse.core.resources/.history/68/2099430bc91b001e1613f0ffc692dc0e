show tables;

create table todayRecipe(
	idx       int not null auto_increment,  /* 오늘의레시피 고유번호 */
	recipeIdx int not null,                 /* 레시피 연결 번호 */
	title     varchar(50) not null,         /* 레터 제목 */
	article   varchar(500) not null,        /* 레터 기사 */
	issueDate date not null,                /* 레터 작성일 */
);